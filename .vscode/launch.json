			"program": "./mqtt-client.py",
			"args": ["-H","localhost","-p","1887","-t","temp","pub"],
			"console": "integratedTerminal"
		},
		{
			"name": "Python: subscriber",
			"type": "python",
			"request": "launch",
			"program": "./mqtt-client.py",
			"args": ["-H","localhost","-p","1887","-t","temp","sub"],
			"console": "integratedTerminal"
		},
		{
			"name": "Python: launch server",
			"type": "python",
			"request": "launch",
			"program": "./mqtt-server.py",
